@model TaskManager.WebApi.ViewModels.LoginViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<body>
    <div class="container">
        <h2>Sign in</h2>
        <form method="post" asp-controller="Auth" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="remember-me">
                <input type="checkbox" id="remember-me" name="remember-me" asp-for="RememberMe" />
                <label for="remember-me">RememberMe</label>
            </div>
            <div class="form-group">
                <button type="submit" class="button">Sign in</button>
            </div>
            <a asp-controller="Auth" asp-action="Register"
               class="toggle-btn">Sign Up</a>
        </form>
    </div>
</body>