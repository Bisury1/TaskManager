@model TaskManager.WebApi.ViewModels.RegisterViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<body>
    <div class="container">
        <h2>Sign Up</h2>
        <form method="post" asp-controller="Auth" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label>PasswordConfirm</label>
                <input asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="button">Sign Up</button>
            </div>
            <a asp-controller="Auth" asp-action="Login"
               class="toggle-btn">Login</a>
        </form>
    </div>
</body>